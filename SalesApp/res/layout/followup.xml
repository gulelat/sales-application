<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_splash_screen"
    >
    <com.android.salesapp.uc.ApplicationTop
        android:id="@+id/topbar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true" 
        />
   	<LinearLayout
   	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topbar"
        android:layout_above="@+id/view_projectname_footbar"
        android:background="#FFFFFF"
        android:layout_margin="10dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" 
            android:gravity="left|center_vertical"
            android:background="@null"
            android:orientation="vertical"
            >
            <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/txtview_inputinfo_title"
	            android:textColor="#3B84D3"
	            android:textStyle="bold"
	            android:textSize="15sp"	
	            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >
	        <View
	           	android:layout_width="fill_parent"
	           	android:layout_height="2dp"
	           	android:background="#C4C4C4"
	           	/>
            <LinearLayout
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:padding="10dp"
            	android:gravity="center_vertical"
            	>
            	<TextView
            		android:layout_width="100dp"
            		android:layout_height="wrap_content"
            		android:textColor="#000000"
            		android:textStyle="bold"
            		android:text="E-mail"
            		/>
           		<ImageView
	  	            android:layout_width="wrap_content"
	  	        	android:layout_height="wrap_content"
	  	        	android:background="@drawable/ic_ckbox_uncheck"
	  	        	android:tag="0"
	  	        	android:id="@+id/chkEmail"
	 	        	/>
            </LinearLayout>
	        <View
	           	android:layout_width="fill_parent"
	           	android:layout_height="2dp"
	           	android:background="#C4C4C4"
	           	/>
            <LinearLayout
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:padding="10dp"
            	android:gravity="center_vertical"
            	>
            	<TextView
            		android:layout_width="100dp"
            		android:layout_height="wrap_content"
            		android:textColor="#000000"
            		android:textStyle="bold"
            		android:text="Text Message"
            		/>
           		<ImageView
	  	            android:layout_width="wrap_content"
	  	        	android:layout_height="wrap_content"
	  	        	android:background="@drawable/ic_ckbox_uncheck"
	  	        	android:tag="0"
	  	        	android:id="@+id/chkTextMessage"
	 	        	/>
            </LinearLayout>
	        <View
	           	android:layout_width="fill_parent"
	           	android:layout_height="2dp"
	           	android:background="#C4C4C4"
	           	/>
            <LinearLayout
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:padding="10dp"
            	android:gravity="center_vertical"
            	>
            	<TextView
            		android:layout_width="100dp"
            		android:layout_height="wrap_content"
            		android:textColor="#000000"
            		android:textStyle="bold"
            		android:text="Call"
            		/>
           		<ImageView
	  	            android:layout_width="wrap_content"
	  	        	android:layout_height="wrap_content"
	  	        	android:background="@drawable/ic_ckbox_uncheck"
	  	        	android:tag="0"
	  	        	android:id="@+id/chkCall"
	 	        	/>
            </LinearLayout>
	        <View
	           	android:layout_width="fill_parent"
	           	android:layout_height="2dp"
	           	android:background="#C4C4C4"
	           	/>
        </LinearLayout>
   	</LinearLayout>
	<com.android.salesapp.uc.ApplicationBottom
	    android:id="@+id/view_projectname_footbar"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true" 
	    />
</RelativeLayout>