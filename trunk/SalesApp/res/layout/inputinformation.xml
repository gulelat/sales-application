<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ic_splash_screen"
    >
    <com.android.salesapp.uc.ApplicationTop
        android:id="@+id/view_inputinfo_topbar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true" 
        />
   	<LinearLayout
   	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_inputinfo_topbar"
        android:layout_above="@+id/view_inputinfo_footbar"
        android:background="#FFFFFF"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" 
            android:gravity="left|center_vertical"
            android:background="@null"
            android:orientation="vertical"
            >
            <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/txtview_inputinfo_title"
	            android:textColor="#3B84D3"
	            android:textStyle="bold"
	            android:textSize="15sp"	
	            />
        </LinearLayout>
        <View
           android:layout_width="fill_parent"
           android:layout_height="2dp"
           android:background="#C4C4C4"
           />
        <ListView
            android:id="@+id/listview_inputInfoField"
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent"
            android:cacheColorHint="#00000000"
            android:fadingEdge="none"
            android:fadingEdgeLength="0dp"
            android:divider="#ABABAB"
            />
   	</LinearLayout>
	<com.android.salesapp.uc.ApplicationBottom
	    android:id="@+id/view_inputinfo_footbar"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true" 
	    />
</RelativeLayout>