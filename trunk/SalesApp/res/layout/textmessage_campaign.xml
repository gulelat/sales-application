<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_splash_screen"
    >
    <com.android.salesapp.uc.ApplicationTop
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true" 
        android:id="@+id/topbar"
        />
   	<LinearLayout
   	    android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/topbar"
        android:layout_above="@+id/view_campagin_footbar"
        android:background="#FFFFFF"
        android:layout_margin="10dp"
        android:orientation="vertical"
        >
        <TextView
	          android:layout_width="fill_parent"
	          android:layout_height="wrap_content"
	          android:textColor="#3B84D3"
	          android:textStyle="bold"
	          android:padding="10dp" 
	          android:textSize="14sp"
	          android:text="Select Text Message"
	          />
         <View
           android:id="@+id/view_seperator_1" 
           android:layout_width="fill_parent"
           android:layout_height="2dp"
           android:background="#C4C4C4"
           android:layout_below="@+id/view_campagin_title"
           />
        
   	     <LinearLayout
   	     	android:layout_width="fill_parent"
         	android:layout_height="wrap_content"
         	android:orientation="vertical"
         	>
   	         <TextView
  	            android:layout_width="wrap_content"
  	        	android:layout_height="wrap_content"
  	        	android:layout_margin="10dp"
  	        	android:text="Select Date"
  	        	android:textColor="#000000"
  	        	android:textStyle="bold"
  	        	/>
	   	     <LinearLayout
	   	     	android:layout_width="fill_parent"
	         	android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:layout_marginBottom="10dp"
	         	>
	   	         <EditText
	   	             android:layout_width="100dp" 
	   	             android:layout_height="wrap_content"
	   	             android:layout_marginRight="15dp"
	   	             android:background="@drawable/ddl_bg"
	   	             android:hint="Date"
	   	             android:textSize="12dp"
	   	             android:textColor="#000000"
	   	             android:editable="false"
	   	             android:id="@+id/txtDate"
	   	             />
	   	         <EditText
	   	             android:layout_width="100dp" 
	   	             android:layout_height="wrap_content"
	   	             android:background="@drawable/ddl_bg"
	   	             android:hint="Time"
	   	             android:textSize="12dp"
	   	             android:textColor="#000000"
	   	             android:editable="false"
	   	             android:id="@+id/txtTime"
	   	             />
         	</LinearLayout>
   	     </LinearLayout>
         <View
           android:id="@+id/view_seperator_2"
           android:layout_width="fill_parent"
           android:layout_height="2dp"
           android:background="#C4C4C4"
           android:layout_below="@+id/view_campagin_when"
           />  
   	  	 <LinearLayout
   	  	   android:id="@+id/view_qualifier_selectType"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:padding="10dp" 
           android:gravity="left|center_vertical"
           android:background="@null"
           android:orientation="vertical"
           android:layout_below="@+id/view_seperator_2"
           >
            <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="select Text"
	            android:textSize="14sp"	
  	        	android:textColor="#000000"
  	        	android:textStyle="bold"
	            />
       
        </LinearLayout>
        <View
           android:id="@+id/view_seperator_3"
           android:layout_width="fill_parent"
           android:layout_height="2dp"
           android:background="#C4C4C4"
           android:layout_below="@+id/view_qualifier_selectType"
           />
        <EditText
             android:layout_width="fill_parent" 
             android:layout_height="fill_parent"
             android:layout_margin="10dp"
             android:background="@drawable/editbox_white"
             android:gravity="top"
             android:maxLines="5"
             android:textSize="12dp"
	   	     android:textColor="#000000"
             android:id="@+id/txtMessage"
             />
    </LinearLayout>
	<com.android.salesapp.uc.ApplicationBottom
	    android:id="@+id/view_campagin_footbar"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true" 
	    />
</RelativeLayout>